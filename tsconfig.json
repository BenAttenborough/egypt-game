{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,  // Disallows implicit 'any' types
    "noImplicitReturns": true,  // Requires all code paths to return a value
    "noImplicitThis": true,  // Disallows 'this' in contexts where it's not clear
    "strictNullChecks": true,  // Treats 'null' and 'undefined' strictly
    "strictFunctionTypes": true,  // Stricter function type checking
    "strictBindCallApply": true,  // Stricter checking for bind/call/apply
    "strictPropertyInitialization": true  // Requires properties to be initialized
  },
  "include": ["src"]
}
